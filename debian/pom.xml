<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jalview</groupId>
  <artifactId>jalview</artifactId>
  <packaging>jar</packaging>
  <name>Jalview</name>
  <version>VERSION_PACKAGE</version>
  <description>Jalview is a free program for multiple sequence alignment editing, visualisation and analysis. Use it to view and edit sequence alignments, analyse them with phylogenetic trees and principal components analysis (PCA) plots and explore molecular structures and annotation.</description>
  <url>http://www.jalview.org/</url>
  <licenses>
    <license>
      <name>GNU General Public License Version 3</name>
      <url>http://www.gnu.org/licenses/gpl.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <developers>
    <developer>
      <id>jpr</id>
      <name>Jim Procter</name>
      <organization>Computational Biology group at the University of Dundee</organization>
    </developer>
    <developer>
      <id>gbr</id>
      <name>Geoff Barton</name>
      <organization>Computational Biology group at the University of Dundee</organization>
    </developer>
  </developers>

  <build>
    <sourceDirectory>src</sourceDirectory>
    <testSourceDirectory>test</testSourceDirectory>
    <resources>
      <resource>
        <directory>resources</directory>
      </resource>
    </resources>

    <plugins>
      <!-- This plugin executes the testng tests -->
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <groups>Functional</groups>
          <excludedGroups>Not-bamboo</excludedGroups>
          <!-- Including only the test that
               - are not in jalview/gui;
               - do not import some package from jalview.gui;
               - do not import some package from java.awt.
          -->
          <includes>
            <include>**/AtomSpecModelTest.java</include>
            <include>**/AtomSpecTest.java</include>
            <include>**/ClustalFileTest.java</include>
            <include>**/ConcurrentModificationTest.java</include>
            <include>**/ConditionTest.java</include>
            <include>**/CustomUrlProviderTest.java</include>
            <include>**/DesktopUrlProviderFactoryTest.java</include>
            <include>**/EmblFlatFileTest.java</include>
            <include>**/EmblXmlSourceTest.java</include>
            <include>**/EnsemblRestClientTest.java</include>
            <include>**/FeatureAttributesTest.java</include>
            <include>**/FeatureMatcherSetTest.java</include>
            <include>**/FeatureMatcherTest.java</include>
            <include>**/FeatureStoreTest.java</include>
            <include>**/FileFormatsTest.java</include>
            <include>**/FileLoaderTest.java</include>
            <include>**/GeneticCodesTest.java</include>
            <include>**/HiddenColumnsCursorTest.java</include>
            <include>**/HiddenColumnsTest.java</include>
            <include>**/IdentifiersUrlProviderTest.java</include>
            <include>**/JalviewColourSchemeTest.java</include>
            <include>**/JalviewFileViewTest.java</include>
            <include>**/JSONUtilsTest.java</include>
            <include>**/JvCacheableInputBoxTest.java</include>
            <include>**/MappedFeaturesTest.java</include>
            <include>**/MatcherTest.java</include>
            <include>**/MathUtilsTest.java</include>
            <include>**/MatrixTest.java</include>
            <include>**/MemorySettingTest.java</include>
            <include>**/MessageManagerTest.java</include>
            <include>**/OverviewDimensionsHideHiddenTest.java</include>
            <include>**/OverviewDimensionsShowHiddenTest.java</include>
            <include>**/PfamFullTest.java</include>
            <include>**/PfamSeedTest.java</include>
            <include>**/PIDModelTest.java</include>
            <include>**/RangeElementsIteratorTest.java</include>
            <include>**/RemoteFormatTest.java</include>
            <include>**/RfamFullTest.java</include>
            <include>**/RfamSeedTest.java</include>
            <include>**/RotatableMatrixTest.java</include>
            <include>**/ScoreMatrixFileTest.java</include>
            <include>**/ScoreMatrixTest.java</include>
            <include>**/ScoreModelsTest.java</include>
            <include>**/SequenceFeaturesTest.java</include>
            <include>**/SequenceOntologyLiteTest.java</include>
            <include>**/SparseDoubleArrayTest.java</include>
            <include>**/SparseMatrixTest.java</include>
            <include>**/SpeciesTest.java</include>
            <include>**/StartRegionIteratorTest.java</include>
            <include>**/StructureMappingTest.java</include>
            <include>**/UrlDownloadClientTest.java</include>
            <include>**/UrlLinkDisplayTest.java</include>
            <include>**/UrlLinkTableModelTest.java</include>
            <include>**/UrlProviderTest.java</include>
            <include>**/VCFReaderTest.java</include>
            <include>**/ViewportRangesTest.java</include>
            <include>**/VisibleContigsIteratorTest.java</include>
            <include>**/VisibleRowsIteratorTest.java</include>
          </includes>
        </configuration>
      </plugin>
            <!-- Compiler plugin: configuring the java version used to build -->
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

